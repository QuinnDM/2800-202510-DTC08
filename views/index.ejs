<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Ensure proper visibility when switching content */
      #articleContent {
        display: none; /* Start hidden by default */
      }
      
      #articleContent.active {
        display: block; /* Show when active class is added */
      }
      
      /* Additional styling for articles */
      #articleContent article {
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body class="bg-green-50 text-gray-800 flex flex-col min-h-screen">
    <!-- Fixed Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main class="flex-1 mt-10 pt-16 pb-16 overflow-y-auto px-4 md:px-8 max-w-screen-lg mx-auto">
      <!-- Home Section -->
      <section id="Home" class="px-4">
        <!-- Hero Section with Stats -->
        <%- include('components/home-hero') %>
        
        <!-- Article Previews -->
        <%- include('components/article-previews') %>
        
        <!-- Featured Guides -->
        <%- include('components/featured-guides') %>
        
        <!-- Seasonal Guides -->
        <%- include('components/seasonal-guides') %>
      </section>
      
      <!-- Full Article Content (Hidden) - This is outside the Home section -->
      <section id="articleContent" class="hidden px-4">
        <%- include('components/full-article') %>
      </section>
    </main>

    <!-- Bottom Navigation -->
    <%- include('partials/footer') %>

    <script>
      // Load stats
      async function loadStats() {
        try {
          const response = await fetch("/stats");
          if (!response.ok) throw new Error("Failed to fetch stats");
          const { birds, plants } = await response.json();
          document.getElementById("birdStats").innerText = birds;
          document.getElementById("plantStats").innerText = plants;
        } catch (error) {
          console.error("Load Stats Error:", error);
        }
      }

      // Initialize
      document.addEventListener("DOMContentLoaded", () => {
        loadStats();
        console.log("Home page initialized");
        
        // Debug check of article content
        const articleContent = document.getElementById('articleContent');
        console.log("Article content element found:", !!articleContent);
        if (articleContent) {
          const articles = articleContent.querySelectorAll('article');
          console.log("Number of articles:", articles.length);
          articles.forEach(art => console.log("- Article ID:", art.id));
        }
      });
    </script>
    <!-- Load the bird article functionality after all components are loaded -->
    <script src="/scripts/bird-articles.js"></script>
  </body>
</html>