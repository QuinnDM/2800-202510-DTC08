    <script>
      // Bird article functionality
      document.addEventListener('DOMContentLoaded', function() {
        // Add click event listeners to all "Read Article" links
        const articleLinks = document.querySelectorAll('a[href="#"]');
        
        articleLinks.forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Get the article title from the closest article element
            const article = this.closest('article');
            const articleTitle = article.querySelector('h3').textContent.trim();
            
            // Show the appropriate article content based on title
            if (articleTitle === "Getting Started with Bird Watching") {
              showArticleContent('getting-started-article');
            } else if (articleTitle === "Bird Identification Tips for Beginners") {
              // You would have other article IDs for different articles
              // For now, just show the same one as a placeholder
              showArticleContent('getting-started-article');
            } else {
              // For any other article, show the first one as a placeholder
              showArticleContent('getting-started-article');
            }
          });
        });
        
        // Function to show specific article content
        function showArticleContent(articleId) {
          // Hide the main content
          document.querySelector('#Home').style.display = 'none';
          
          // Show the article content container
          const articleContent = document.getElementById('articleContent');
          articleContent.classList.remove('hidden');
          
          // Hide all articles within the container
          const allArticles = articleContent.querySelectorAll('article');
          allArticles.forEach(art => art.style.display = 'none');
          
          // Show the requested article
          const targetArticle = document.getElementById(articleId);
          if (targetArticle) {
            targetArticle.style.display = 'block';
          }
          
          // Add a back button at the top if it doesn't exist yet
          if (!document.getElementById('backToHome')) {
            const backButton = document.createElement('button');
            backButton.id = 'backToHome';
            backButton.innerHTML = '&larr; Back to Home';
            backButton.className = 'mb-4 text-green-600 hover:text-green-800 font-medium';
            backButton.addEventListener('click', function() {
              // Hide article content
              articleContent.classList.add('hidden');
              // Show main content
              document.querySelector('#Home').style.display = 'block';
              // Remove the back button
              this.remove();
            });
            
            articleContent.insertBefore(backButton, articleContent.firstChild);
          }
          
          // Scroll to top
          window.scrollTo(0, 0);
        }
      });
