<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Explore</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Leaflet styles -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet-geosearch@3.1.0/assets/css/leaflet.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet-geosearch@3.0.0/dist/geosearch.css" />
</head>

<body class="bg-gray-100 text-gray-800">

  <%- include('partials/header') %>

  <div class="container mx-auto pt-24 px-4 py-6 space-y-6">

    <!-- Map Container -->
    <div id="map" class="w-full h-[500px] rounded-lg shadow-md"></div>

    <!-- Location Info Toggle Button -->
    <div id="locationInformationButton" class="text-center">
      <!-- You can add a button if needed -->
    </div>

    <!-- Location Information Output -->
    <div id="locationInformationContainer" class="bg-white rounded-lg shadow p-4" style="display: none;">
      <p id="output" class="text-sm text-gray-600"></p>
    </div>

    <!-- Sightings Info Bar -->
    <div id="sightingsCountBar" class="bg-white rounded-lg shadow p-6 flex flex-col md:flex-row justify-between gap-4">
      <!-- Header -->
      <div id="observationHeader" class="text-lg font-semibold text-green-700">
        <p>Sightings</p>
      </div>

      <!-- Visible Sightings -->
      <div class="sightings flex items-center gap-2 text-sm">
        <p class="font-medium">Visible:</p>
        <p id="visibleSightings" class="text-gray-700"></p>
      </div>

      <!-- Your Sightings -->
      <div id="yourSightings" class="flex items-center gap-2 text-sm">
        <p class="font-medium">Yours:</p>
        <p>50</p>
      </div>

      <!-- Total Sightings -->
      <div class="sightings flex items-center gap-2 text-sm">
        <p class="font-medium">Total:</p>
        <p id="totalSightingsCount" class="text-gray-700"></p>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
  <script src="https://unpkg.com/leaflet-geosearch@latest/dist/bundle.min.js"></script>
  <script src="scripts/explore.js"></script>
</body>

</html>