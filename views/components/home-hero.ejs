<div class="md:w-1/2 mx-auto">
  <h2 class="text-2xl md:text-3xl font-bold mb-4">
    Welcome<% if (typeof user !=='undefined' && user) { %>, <%= user.email || user.username %>
        <% } %>!
  </h2>
  <p class="text-lg mb-6">Discover the wonders of nature around you.</p>
</div>
<div class="w-full md:w-1/2 mx-auto">
  <div class="bg-white rounded-xl shadow-md p-6 border border-green-100 mb-6">
    <h3 class="text-xl font-semibold mb-6 flex items-center gap-2">
      📊 Your Nature Stats
    </h3>

    <!-- Sighted Section -->
    <div>
      <h4 class="text-lg font-medium mb-4 flex items-center gap-2">
        <span class="bg-purple-100 p-2 rounded-full">👀</span>
        Sightings Contributed
      </h4>
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-blue-50 rounded-lg p-4 text-center">
          <p class="text-sm text-gray-600 mb-1">🐦 Birds</p>
          <p class="text-3xl font-bold text-blue-500" id="birdsSighted">0</p>
        </div>
        <div class="bg-green-50 rounded-lg p-4 text-center">
          <p class="text-sm text-gray-600 mb-1">🌿 Plants</p>
          <p class="text-3xl font-bold text-green-500" id="plantsSighted">0</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Identify Button -->
  <a href="/identify"
    class="mb-5 text-center w-full bg-gradient-to-r from-blue-500 to-green-500 text-white py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition duration-300 ease-in-out flex items-center justify-center gap-2">
    <span class="text-xl">🌿</span>
    <span>Identify Something New</span>
  </a>
</div>