<header class="fixed top-0 left-0 right-0 bg-white/80 backdrop-blur-sm shadow-md z-50 border-b border-green-100">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="flex items-center group">
      <svg class="w-8 h-8 text-green-600 group-hover:text-green-700 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
      </svg>
      <span class="ml-2 text-xl font-bold text-green-800 group-hover:text-green-700 transition">Nature Nexus</span>
    </a>
    
    <!-- Navigation -->
    <div class="flex items-center space-x-6">
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-gray-700 hover:text-green-600 font-medium transition hover:-translate-y-0.5">Home</a>
        <a href="/explore" class="text-gray-700 hover:text-green-600 font-medium transition hover:-translate-y-0.5">Explore</a>
        <a href="/identify" class="text-gray-700 hover:text-green-600 font-medium transition hover:-translate-y-0.5">Identify</a>
        <a href="/collection" class="text-gray-700 hover:text-green-600 font-medium transition hover:-translate-y-0.5">My Collection</a>
        <a href="/settings" class="text-gray-700 hover:text-green-600 font-medium transition hover:-translate-y-0.5">Settings</a>
      </nav>
      
      <!-- Always visible login/logout button -->
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/logout" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg transition font-medium shadow hover:scale-105 transform transition duration-300 ease-in-out">Logout</a>
      <% } else { %>
        <a href="/login" class="bg-gradient-to-r from-blue-500 to-green-500 text-white px-4 py-2 rounded-full shadow-lg hover:scale-105 transform transition duration-300 ease-in-out font-medium">Login</a>
      <% } %>
    </div>
  </div>
</header>